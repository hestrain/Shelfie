<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="/css/style.css" />
    <title>Shelfie</title>

  </head>
  <body>

    <nav class="nav mb-2">
      <a
        class="nav-link active link-color font"
        aria-current="page"
        href="/"
      >Home</a>
      <a class="nav-link link-color font" href="/page-one">My Collections</a>
      <a class="nav-link link-color font" href="/search">Search Books</a>
      {{#if loggedIn}}
        <a class="nav-link link-color font" id="logout" href="/login">Logout</a>
      {{else}}
        <a class="nav-link link-color font" href="/login">Login</a>
      {{/if}}

    </nav>

    <!-- Skip Link / Nested Buttons-->
    <div
      id="pandas-rock"
      class="btn-group"
      role="group"
      aria-label="Button group with nested dropdown"
    >

      <div class="btn-group dropup" role="group">
        {{!-- drowndown button --}}
        <button
          type="button"
          class="btn btn-primary dropdown-toggle"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
         <i class="fa-solid fa-circle-info" id="i-btn"></i>
        </button>
        {{!-- drowndown list --}}
        <ul id="im-right" class="dropdown-menu dropdown-menu-start">
          <li><button class="btn-styled dropdown-item">
            {{!-- put icons inside href and research how to set the text content to none on smaller screens --}}
            <a
                href="#main-content"
               
              >Skip to main content</a></button></li>
          <li><button class="btn-styled dropdown-item"><a href="#top" >Back to
                Top</a></button>
          </li>
          <li>
            <button id="read-aloud" class="btn-styled dropdown-item">Read Aloud</button>
          </li>
          <li>
            <button id="focus-button" class="btn-styled dropdown-item">Focus Input</button>
          </li>

        </ul>
      </div>
    </div>

    <!-- Read Aloud Button -->
{{!-- <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover" data-bs-title="Popover title" data-bs-content="And here's some amazing content. It's very engaging. Right?">Click to toggle popover</button> --}}
    <!--focus Button -->

    <!-- Example input field to focus -->
    {{! <input type="text" id="myInput" class="fwclicked dropdown-item" placeholder="Focus me when button is clicked"> }}

    <main class="container">

      {{{body}}}

    </main>

    <footer class="footer">
      <h6 clas="font mt-3 opacity-25">
        Â© 2024 Copyright: All Rights Reserved by Shelfie</h6>
    </footer>

    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/accessibilty.js"></script>
  </body>
</html>