<div>
  {{! books comes from the data being passed in the get method res.render on searchRoutes.js! }}
  <header>CHANGE THIS HEADER LATER -- THIS IS THE RESULTS PAGE</header>

  {{#each books as | book |}}
    <div class="book-zone">
      <div class="card book-info" id="{{@index}}" style="width: 18rem;">
        <img src="{{book.thumbnail}}" class="card-img-top" alt="book cover for {{book.title}}" />
        <div class="card-body">
          <h3 class="card-title">{{book.title}}</h3>
          {{#each book.authors as |author|}}
          <h5>{{author}}</h5>
          {{/each}}
          <p class="card-text">{{book.description}}</p>
        </div>
    </div>
    {{/each}} 
</div>
<script src="/js/bookApi.js"></script>